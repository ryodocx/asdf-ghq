#!/usr/bin/env bash

toolname=ghq
github_user=motemen
github_repo=ghq
required_commands="curl sed unzip mktemp"

checkDependencies() {
    local flag=0
    for cmd in ${required_commands}; do
        if ! type ${cmd} &>/dev/null; then
            echo "required: ${cmd}"
            flag=1
        fi
    done
    if [ ${flag} = 1 ]; then
        exit 1
    fi
}
